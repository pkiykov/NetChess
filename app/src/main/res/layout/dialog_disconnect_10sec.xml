<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:alpha="0.5"
    android:background="#000000"
    android:layout_gravity="center">

    <ProgressBar
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/disconnect_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/disconnect_progress"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/disconnect_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <Button
        android:layout_marginTop="15dp"
        android:layout_below="@+id/disconnect_countdown"
        android:id="@+id/disconnect_now_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/disconnect_now"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>